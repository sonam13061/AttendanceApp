<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tech"

    tools:context=".init.LoginTeacherActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:text="TEACHER PORTAL"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="italic"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="30dp"

                android:background="@drawable/button">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    android:layout_marginLeft="12dp"
                    android:paddingTop="5dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/emailteacher"
                    android:inputType="textEmailAddress"

                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"

                android:background="@drawable/button">





                <EditText
                    android:layout_width="270dp"
                    android:paddingTop="5dp"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:layout_marginLeft="12dp"

                    android:background="@android:color/transparent"
                    android:id="@+id/passteacher"
                    android:inputType="textPassword"

                    />


            </com.google.android.material.textfield.TextInputLayout>





    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="20dp"
        android:id="@+id/loginteacher"
        android:text="LOGIN"
        android:background="@drawable/registerbutton"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/forgotteacher"
        android:text="Forgot password?"
        android:textAllCaps="false"
        android:textColor="#fff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerteacher"
        android:textAllCaps="false"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="Not Registered Yet? Register Here."
        android:textColor="#fff"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:id="@+id/progress"/>


</LinearLayout>